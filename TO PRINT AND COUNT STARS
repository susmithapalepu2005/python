b=int(input("Enter the no.of Block: "))
l=int(input("Enter the no.of Lines: "))
s=int(input("Enter the no.of Stars: "))
for i in range(b):
    c=0
    for j in range(l-i):
        for k in range(s):
            print("*",end=" ")
            c=c+1
        print()
    print(c)
print("________________________________")
